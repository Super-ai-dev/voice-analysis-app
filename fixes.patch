# Patch to unblock Vercel build by resolving ESLint errors and cleaning the repo
# Apply with:  git apply fixes.patch  (from repo root)

# 1. Clean‑up: ignore build artifacts and duplicate source folder
# -------------------------------------------------------------
# Adds .next/ (build output) and src/ (duplicate app) to .gitignore so they are not linted or committed.

diff --git a/.gitignore b/.gitignore
--- a/.gitignore
+++ b/.gitignore
@@
 node_modules/
+# Next.js build output
+.next/
+
+# Duplicate source folder (everything was moved to /app)
+src/

# 2. app/admin/page.tsx – replace raw <a> with <Link>
# ----------------------------------------------------
diff --git a/app/admin/page.tsx b/app/admin/page.tsx
--- a/app/admin/page.tsx
+++ b/app/admin/page.tsx
@@
-import Link from 'next/link';
+import Link from 'next/link';
@@
-        {/* ナビゲーション */}
-        <a href="/">Home</a>
+        {/* ナビゲーション */}
+        <Link href="/" className="text-primary hover:underline">
+          Home
+        </Link>
@@
-      {user ? <AdminDashboardLayout /> : <AuthForm />}
+      {user ? <AdminDashboardLayout /> : <AuthForm />}
 
